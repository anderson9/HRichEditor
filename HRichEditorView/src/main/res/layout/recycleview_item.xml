<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_additem_add_top"
        style="@style/additem"
        android:layout_gravity="center"
        android:src="@mipmap/add" />
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_editor_item_no_stroke"
        >

        <ImageView
            android:id="@+id/iv_item_delete"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:src="@mipmap/cha" />


        <ImageView
            android:id="@+id/iv_item_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="20dp"
            android:layout_below="@id/iv_item_delete"
            android:src="@mipmap/icon_editor_move" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/iv_item_select"
            android:paddingLeft="10dp">


            <ImageView
                android:id="@+id/iv_item_pic"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/img" />

            <TextView
                android:id="@+id/tv_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignTop="@id/iv_item_pic"
                android:layout_toRightOf="@id/iv_item_pic"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:lines="4"
                android:maxLines="4"
                android:hint="点击添加文字"
                android:textColor="#1e1e1e" />
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/view_add_item" />
</LinearLayout>